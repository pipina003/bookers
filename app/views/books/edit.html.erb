<h1>Editing Book</h1>

<%= form_with model: @book, url: edit_book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<!--詳細ページリンク-->
 <span>
  <%= link_to 'Show', "/books/#{@book.id}" %>
 </span>
 <!--戻る-->
 <span>
  <%= link_to 'Back', "/books" %>
 </span>
<% end %>