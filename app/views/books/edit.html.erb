<h1>Editing Book</h1>

<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>
<div class="Update-buttom">
  <%= f.submit 'Update Book' %>
</div>

<!--詳細ページリンク-->
 <span>
  <%= link_to 'Show', "/books/#{@book.id}" %>
 </span>
