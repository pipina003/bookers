<body>
  <h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
   <tr>
   <!--each構文に=は不要-->
   <% @books.each do |book| %>
   <!--タイトル、本文-->
    <td class="head-title"><%= book.title %></td>
    <td><%= book.body %></td>

    <!--リンク-->
    <td>
     <%= link_to 'Show', "/books/#{book.id}" %>
    </td>

    <!--下のspanに編集画面のリンクを記入%= link_to 表示させるテキスト , リンク先URL [,オプション] %-->
    <td><%= link_to 'Edit', "/books/#{book.id}/edit" %>
    </td>
  <!--下に削除画面のリンクを記入-->
    <td><%= link_to 'Destroy', "/books/#{book.id}",method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
   </tr>
  </tbody>
 <% end %>
</table>



<h2>New book</h2>
<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--form_with部分-->
 <%= form_with model:@book do |f| %>
 <div class="field">
  <%= f.label :title %></br>
  <%= f.text_field:title %>
 </div>

 <div class="field">
  <%= f.label :body %></br>
  <%= f.text_area:body %>
 </div>


 <div class="create-buttom">
  <%= f.submit'Create Book' %>
 </div>
<% end %>

</body>